{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "rootDirs": ["test"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["test/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["test", "test/assets/*"]
}
